Subject: [PATCH] Use exact verion, fix versioning and optuna upper bound

---
 pyproject.toml | 8 ++++----
 1 file changed, 4 insertions(+), 4 deletions(-)

diff --git a/pyproject.toml b/pyproject.toml
index 6844a3d..38f3b09 100644
--- a/pyproject.toml
+++ b/pyproject.toml
@@ -29,7 +29,7 @@ black = 1
 [tool.poetry]
 name = "pytorch_forecasting"
 readme = "README.md"  # Markdown files are supported
-version = "0.0.0"  # is being replaced automatically
+version = "0.10.3"  # is being replaced automatically
 
 authors = ["Jan Beitner"]
 classifiers = [
@@ -56,7 +56,7 @@ python = ">=3.8,<3.11"
 
 torch = "^1.7"
 pytorch-lightning = "^1.2.4"
-optuna = "^2.3.0"
+optuna = "^2.3.0 || ^3.0.0"
 scipy = "^1.8"
 pandas = "^1.3.0"
 scikit-learn = ">=0.24,<1.2"
@@ -106,10 +106,10 @@ mqf2 = ["cpflows"]
 
 [tool.poetry-dynamic-versioning]
 enable = true
-vcs = "git"
+#vcs = "git"
 dirty = false
 style = "semver"  # semantic versioning
 
 [build-system]  # make the package pip installable
 requires = ["poetry-core>=1.0.7", "poetry-dynamic-versioning>=0.13.1"]
-build-backend = "poetry_dynamic_versioning.backend"
+build-backend = "poetry.core.masonry.api"
